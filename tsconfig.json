{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "moduleDetection": "force",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "esModuleInterop": true
    }
}
